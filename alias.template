#!/bin/bash

#build arg string as $@ does not tolerate qoutes
ARG_STRING=""
for arg_num in $(seq 1 $#)
do	
	pattern=" |'"
	if [[ "${!arg_num}" =~ $pattern ]]
	then
		ARG_STRING="$ARG_STRING \"${!arg_num}\""
	else
		ARG_STRING="$ARG_STRING ${!arg_num}"
	fi
done
eval $(basename "$0") $ARG_STRING | lolcat
